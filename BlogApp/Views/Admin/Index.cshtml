<form method="POST" action="/admin/addpost">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Title" name="title"/>
    </div>
    <div class="form-group">
        <textarea name="content" rows="20" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" data-role="tagsinput" name="tags"/>
    </div>
        <button class="btn btn-primary">Submit</button>
</form>

@section css {
    <link href="http://bootstrap-tagsinput.github.io/bootstrap-tagsinput/dist/bootstrap-tagsinput.css" rel="stylesheet" />
}

@section scripts
{
    <script src="https://cdn.rawgit.com/bootstrap-tagsinput/bootstrap-tagsinput/master/dist/bootstrap-tagsinput.min.js"></script>
}
