@using BlogApp.Data;
@model BlogApp.Models.BlogPostViewModel

<!-- Title -->
<h1>@Model.Post.Title</h1>

<!-- Author -->
<p class="lead">
    by <a href="">LIT Master</a>
</p>

<hr>

<!-- Date/Time -->
<p><span class="glyphicon glyphicon-time"></span> Posted on @Model.Post.Date.ToLongDateString()</p>

<hr>

<!-- Preview Image -->
<img class="img-responsive" src="http://placehold.it/900x300" alt="">

<hr>

<!-- Post Content -->
@Html.Raw(Model.Post.Content)

<hr>

<!-- Blog Comments -->
<!-- Comments Form -->
<div class="well">
    <h4>Leave a Comment:</h4>
    <form role="form" method="POST" action="/blog/postcomment">
        <input type="hidden" name="postId" value="@Model.Post.Id" />
        <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Name" />
        </div>
        <div class="form-group">
            <textarea class="form-control" name="content" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<hr>

<!-- Posted Comments -->
<!-- Comment -->
@foreach (Comment comment in Model.Comments)
{
    <div class="media">
        <a class="pull-left" href="#">
            <img class="media-object" src="http://placehold.it/64x64" alt="">
        </a>
        <div class="media-body">
            <h4 class="media-heading">
                @comment.Name
                <small>@comment.Date.ToLongDateString()</small>
            </h4>
            @comment.Content
        </div>
    </div>
}

